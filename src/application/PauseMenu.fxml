<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="backPane" prefHeight="350.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PauseMenuController">
   <children>
      <VBox alignment="CENTER" prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: rgba(0, 100, 125, 125);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Button fx:id="restartButton" mnemonicParsing="false" onAction="#restartButtonClick" prefHeight="90.0" prefWidth="180.0" style="-fx-background-color: white;" text="Yeniden Başlat">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitButtonClick" prefHeight="90.0" prefWidth="180.0" style="-fx-background-color: white;" text="Oyundan Çık">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </children>
</AnchorPane>
